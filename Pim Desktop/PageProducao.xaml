<Page x:Class="Pim_Desktop.PageProducao"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pim_Desktop"
      mc:Ignorable="d" 
      d:DesignHeight="730" d:DesignWidth="800"
      Title="PageProducao">

    <Grid>
        <!-- Borda com gradiente -->
        <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="20" Margin="10">


            <!-- Contêiner para as imagens -->
            <Grid>
                <Viewbox Stretch="UniformToFill">
                    <Image Source="Images/PalmeiraLeft.png" RenderTransformOrigin="1,-30.0">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="1.317"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Viewbox>

                <Viewbox Stretch="UniformToFill">
                    <Image Source="Images/PalmeiraRight.png" Margin="0,0,0,0" RenderTransformOrigin="1.0,7.3">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="5.917"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Viewbox>
            </Grid>
        </Border>

        <Border HorizontalAlignment="Center" Height="34" Background="#25A754"
        VerticalAlignment="Top" Width="300" Margin="0,60,0,0"
        CornerRadius="5" BorderBrush="Transparent" BorderThickness="0">
            <TextBlock Text="Produção" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"
               Foreground="White" FontSize="16"/>
        </Border>

        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="32" Height="30" Background="Transparent"
        Margin="40,40,0,0" Style="{StaticResource RoundedButtonStyle}" BorderBrush="Transparent" Click="Voltar_Click">
            <Image Source="Images/Voltar.png" Width="30" Height="30"/>
        </Button>

        <Button Name="Gerar" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" Height="33"
        Background="#25A754" Margin="0,455,0,0" BorderBrush="Transparent" 
        BorderThickness="0"  Foreground="White" FontSize="16" Content="Gerar Relatório"
        FontFamily="Tahoma" Style="{StaticResource RoundedButtonStyle}" Click="Gerar_Click">
        </Button>


        <ToggleButton Name="Janeiro" HorizontalAlignment="Center" VerticalAlignment="Top" Width="130" Height="38"
              Margin="0,520,450,0" FontSize="16" Content="Janeiro" FontFamily="Tahoma"
              Style="{StaticResource RoundedToggleButtonStyle}" Click="Janeiro_Click">
        </ToggleButton>

        <ToggleButton Name="Fevereiro" HorizontalAlignment="Center" VerticalAlignment="Top" Width="130" Height="38"
              Margin="0,520,150,0" FontSize="16" Content="Fevereiro" FontFamily="Tahoma"
              Style="{StaticResource RoundedToggleButtonStyle}" Click="Fevereiro_Click">
        </ToggleButton>

        <ToggleButton Name="Março" HorizontalAlignment="Center" VerticalAlignment="Top" Width="130" Height="38"
              Margin="0,520,-150,0" FontSize="16" Content="Março" FontFamily="Tahoma"
              Style="{StaticResource RoundedToggleButtonStyle}" Click="Março_Click">
        </ToggleButton>

        <ToggleButton Name="Abril" HorizontalAlignment="Center" VerticalAlignment="Top" Width="130" Height="38"
              Margin="0,520,-450,0" FontSize="16" Content="Abril" FontFamily="Tahoma"
              Style="{StaticResource RoundedToggleButtonStyle}" Click="Abril_Click">
        </ToggleButton>

        <ToggleButton Name="Maio" HorizontalAlignment="Center" VerticalAlignment="Top" Width="130" Height="38"
              Margin="0,580,450,0" FontSize="16" Content="Maio" FontFamily="Tahoma"
              Style="{StaticResource RoundedToggleButtonStyle}" Click="Maio_Click">
        </ToggleButton>

        <ToggleButton Name="Junho" HorizontalAlignment="Center" VerticalAlignment="Top" Width="130" Height="38"
              Margin="0,580,150,0" FontSize="16" Content="Junho" FontFamily="Tahoma"
              Style="{StaticResource RoundedToggleButtonStyle}" Click="Junho_Click">
        </ToggleButton>

        <ToggleButton Name="Julho" HorizontalAlignment="Center" VerticalAlignment="Top" Width="130" Height="38"
              Margin="0,580,-150,0" FontSize="16" Content="Julho" FontFamily="Tahoma"
              Style="{StaticResource RoundedToggleButtonStyle}" Click="Julho_Click">
        </ToggleButton>

        <ToggleButton Name="Agosto" HorizontalAlignment="Center" VerticalAlignment="Top" Width="130" Height="38"
              Margin="0,580,-450,0" FontSize="16" Content="Agosto" FontFamily="Tahoma"
              Style="{StaticResource RoundedToggleButtonStyle}" Click="Agosto_Click">
        </ToggleButton>

        <ToggleButton Name="Setembro" HorizontalAlignment="Center" VerticalAlignment="Top" Width="130" Height="38"
              Margin="0,640,450,0" FontSize="16" Content="Setembro" FontFamily="Tahoma"
              Style="{StaticResource RoundedToggleButtonStyle}" Click="Setembro_Click">
        </ToggleButton>

        <ToggleButton Name="Outubro" HorizontalAlignment="Center" VerticalAlignment="Top" Width="130" Height="38"
              Margin="0,640,150,0" FontSize="16" Content="Outubro" FontFamily="Tahoma"
              Style="{StaticResource RoundedToggleButtonStyle}" Click="Outubro_Click">
        </ToggleButton>

        <ToggleButton Name="Novembro" HorizontalAlignment="Center" VerticalAlignment="Top" Width="130" Height="38"
              Margin="0,640,-150,0" FontSize="16" Content="Novembro" FontFamily="Tahoma"
              Style="{StaticResource RoundedToggleButtonStyle}" Click="Novembro_Click">
        </ToggleButton>

        <ToggleButton Name="Dezembro" HorizontalAlignment="Center" VerticalAlignment="Top" Width="130" Height="38"
              Margin="0,640,-450,0" FontSize="16" Content="Dezembro" FontFamily="Tahoma"
              Style="{StaticResource RoundedToggleButtonStyle}" Click="Dezembro_Click">
        </ToggleButton>

        <Image Source="Images/Grafico1.png" Width="260" Height="130" Margin="0,140,310,0" VerticalAlignment="Top"/>

        <Image Source="Images/Grafico2.png" Width="260" Height="130" Margin="270,141,0,0" VerticalAlignment="Top"/>

        <Image Source="Images/Grafico3.png" Width="260" Height="130" Margin="0,300,310,0" VerticalAlignment="Top"/>

        <Image Source="Images/Grafico4.png" Width="260" Height="130" Margin="270,300,0,0" VerticalAlignment="Top"/>

        <TextBlock Text="Crescimento das plantas" HorizontalAlignment="Center" VerticalAlignment="Top"
          Foreground="White" FontSize="12" Margin="300,280,0,0" FontFamily="tahoma"/>

        <TextBlock Text="Quantidade Produzida" HorizontalAlignment="Center" VerticalAlignment="Top"
          Foreground="White" FontSize="12" Margin="0,280,300,0" FontFamily="tahoma"/>

        <TextBlock Text="Volume Colhido" HorizontalAlignment="Center" VerticalAlignment="Top"
          Foreground="White" FontSize="12" Margin="0,440,300,0" FontFamily="tahoma"/>

        <TextBlock Text="Uso de Recursos" HorizontalAlignment="Center" VerticalAlignment="Top"
          Foreground="White" FontSize="12" Margin="300,440,0,0" FontFamily="tahoma"/>

        <!-- Popup para aviso -->
        <Popup x:Name="AvisoPopup" Placement="Top" StaysOpen="False" AllowsTransparency="True">
            <Border Background="#25A754" BorderBrush="Transparent" BorderThickness="1" CornerRadius="5" Padding="10">
                <TextBlock x:Name="MensagemPopup" Foreground="White" FontSize="14" TextWrapping="Wrap"/>
            </Border>
        </Popup>

    </Grid>
</Page>
